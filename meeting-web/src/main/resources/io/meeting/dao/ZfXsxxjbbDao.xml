	<select id="queryObject" resultType="io.meeting.entity.ZfXsxxjbbEntity">
		select * from zf_xsxxjbb where xh = #{value}
	</select>

	<select id="queryList" resultType="io.meeting.entity.ZfXsxxjbbEntity">
		select * from zf_xsxxjbb
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by xh desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from zf_xsxxjbb 
	</select>
    <select id="queryStudentChartList" resultType="io.meeting.entity.ZfstudentchartEntity">
		select ssxydm as departmentCode ,count(*)  as  departmentNum  from zf_xsxxjbb  group by   ssxydm
	</select>

	<insert id="save" parameterType="io.meeting.entity.ZfXsxxjbbEntity">
		insert into zf_xsxxjbb
		(
			`xh`, 
			`xm`, 
			`xb`, 
			`xy`, 
			`zymc`, 
			`xzb`, 
			`xz`, 
			`xjzt`, 
			`dqszj`, 
			`sfzh`, 
			`zydm`, 
			`sfzx`, 
			`sfzc`, 
			`ssxydm`, 
			`bjdm`
		)
		values
